<Window x:Class="TestParallelLineExpander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ParallelLinesExpander2.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Expander Header="ClickMe" Grid.Row="1" ExpandDirection="Right">
            <Grid>
                <TextBlock Text="ExpanderText" Foreground="Black"/>
            </Grid>         
        </Expander>
    </Grid>
</Window>
